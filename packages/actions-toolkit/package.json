{
  "name": "actions-toolkit",
  "description": "A toolkit for building GitHub Actions in Node.js",
  "version": "7.0.0",
  "author": "Jason Etcovitch <jasonetco@gmail.com>",
  "bin": {
    "actions-toolkit": "./bin/cli.js"
  },
  "bugs": "https://github.com/JasonEtco/actions-toolkit/issues",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@octokit/rest": "^22.0.0",
    "@types/flat-cache": "^2.0.2",
    "@types/minimist": "^1.2.5",
    "enquirer": "^2.4.1",
    "minimist": "^1.2.8",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "homepage": "https://github.com/JasonEtco/actions-toolkit#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    }
  },
  "keywords": [
    "github",
    "github actions",
    "github api",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "dist/index.js",
  "private": true,
  "repository": "JasonEtco/actions-toolkit.git",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "pnpm build",
    "test": "tsc --noEmit -p tests && jest --coverage && pnpm lint",
    "test:update": "tsc --noEmit -p tests && jest --coverage -u && pnpm lint"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}
