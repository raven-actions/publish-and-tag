{
  "name": "publish-and-tag",
  "description": "A GitHub Action for properly publishing and tagging GitHub Actions.",
  "version": "0.0.0",
  "author": "Dariusz Porowski",
  "bugs": "https://github.com/raven-actions/publish-and-tag/issues",
  "contributors": [
    "Jason Etcovitch"
  ],
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "@actions/glob": "^0.5.0",
    "@octokit/rest": "^22.0.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node24": "^24.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.4",
    "@types/semver": "^7.7.1",
    "@types/signale": "^1.4.7",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.49.0",
    "vitest": "^4.0.15"
  },
  "files": [
    "dist/*",
    "LICENSE"
  ],
  "homepage": "https://github.com/raven-actions/publish-and-tag#readme",
  "keywords": [
    "actions",
    "github",
    "github-actions",
    "publish",
    "raven-actions",
    "tag"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "private": true,
  "repository": "raven-actions/publish-and-tag.git",
  "scripts": {
    "build": "pnpm cleanup && pnpm format && pnpm package",
    "build:ci": "pnpm build",
    "cleanup": "pnpm dlx rimraf -g dist lib coverage reports",
    "cleanup:deps": "pnpm cleanup && pnpm dlx rimraf node_modules && pnpm dlx rimraf pnpm-lock.yaml",
    "deps:ci": "pnpm install --frozen-lockfile",
    "deps:ck": "pnpm outdated --long",
    "deps:up": "pnpm update --latest",
    "format": "syncpack format && prettier --config ./.github/linters/.prettierrc.yml --write \"**/*.{ts,mts,cts,tsx,js,mjs,cjs,jsx,json,jsonc}\"",
    "lint": "eslint . --config ./.github/linters/eslint.config.mjs",
    "package": "node esbuild.config.mjs",
    "run": "node dist/index.js",
    "run:dev": "node --import tsx ./src/index.ts",
    "run:local": "pnpm dlx @github/local-action . src/main.ts .env",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=junit --outputFile=reports/junit.xml",
    "test:ci:cov": "vitest run --reporter=junit --outputFile=reports/junit.xml --coverage",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}
