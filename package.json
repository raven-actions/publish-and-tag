{
  "name": "publish-and-tag",
  "description": "A GitHub Action for properly publishing and tagging GitHub Actions.",
  "version": "0.0.0",
  "author": "Dariusz Porowski",
  "contributors": [
    "Jason Etcovitch"
  ],
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/*",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raven-actions/publish-and-tag.git"
  },
  "bugs": {
    "url": "https://github.com/raven-actions/publish-and-tag/issues"
  },
  "homepage": "https://github.com/raven-actions/publish-and-tag#readme",
  "keywords": [
    "raven-actions",
    "github-actions",
    "actions",
    "github",
    "publish",
    "tag"
  ],
  "scripts": {
    "cleanup": "pnpm dlx rimraf -g dist lib coverage reports",
    "cleanup:deps": "pnpm cleanup && pnpm dlx rimraf node_modules && pnpm dlx rimraf pnpm-lock.yaml",
    "lint": "eslint .",
    "format": "prettier --config \".github/linters/.prettierrc.yml\" --write **/*.ts",
    "format:ck": "prettier --config \".github/linters/.prettierrc.yml\" --check **/*.ts",
    "package": "pnpm dlx @vercel/ncc build ./src/index.ts --source-map --license licenses.txt",
    "package:esbuild": "pnpm dlx esbuild ./src/index.ts --bundle --sourcemap --platform=node --target=node20 --outfile=dist/index.js",
    "package:rollup": "pnpm cleanup && rollup -c rollup.config.mjs",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js",
    "test:cov": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --ci",
    "test:ci:cov": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --ci --coverage --json --outputFile=coverage/report.json",
    "build": "pnpm cleanup && pnpm format && pnpm package",
    "build:ci": "pnpm build",
    "run:dev": "pnpm dlx @vercel/ncc run ./src/index.ts",
    "run:local": "pnpm dlx @github/local-action . src/main.ts .env",
    "run": "node dist/index.js",
    "deps:ck": "pnpm outdated --long",
    "deps:up": "pnpm update --latest",
    "deps:ci": "pnpm install --frozen-lockfile"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "actions-toolkit": "workspace:*",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@tsconfig/node20": "^20.1.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/semver": "^7.7.0",
    "@types/signale": "^1.4.7",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "nock": "^14.0.5",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "rollup": "^4.44.0",
    "signale": "^1.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.34.1"
  }
}
